---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import Carrusel from '../components/Carrusel.jsx';
import Destacados from '../components/Destacados.astro';
import Noticias from '../components/Noticias.jsx';
import PlanesDestacados from '../components/PlanesDestacados.jsx';
import Footer from '../components/Footer.astro';
---

<Layout title="Kanalete | Agencia de Viajes y Turismo">
	<main>
		<NavBar></NavBar>
		<div class="h-[400px] mt-[60px] max-w-screen-2xl mx-auto relative">
			<Carrusel client:load></Carrusel>
			<div class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 z-50 flex flex-col items-center justify-center">
				<h1 class="text-white md:text-6xl text-2xl px-5 font-semibold text-center max-w-[800px]">
					Viaja y conectate con la paz de la naturaleza
				</h1>
				<div>
					<a href="/servicios" class="bg-green-500 text-white hover:bg-white hover:text-green-500 hover:border-green-500 hover:border-2 box-border hover:box-border ease-in-out duration-300 px-4 py-2 rounded-md mt-8 inline-block font-semibold">
						Ver servicios
					</a>
				</div>
			</div>
		</div>

		<section class="max-w-screen-lg mx-auto mt-10 px-5 md:px-0">
			<Destacados></Destacados>
		</section>

		<section class="max-w-screen-lg mx-auto mt-10 px-5 md:px-0 h-[120px]">
			<Noticias client:load></Noticias>
		</section>

		<!-- Planes destacados -->
		<section class="w-full relative mt-20">
			<PlanesDestacados client:load></PlanesDestacados>
		</section>

		<Footer></Footer>
	</main>

